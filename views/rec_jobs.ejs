<%- include('./rec_header.ejs') %>

  <script>
    deactiveLink();
    activeLink(1);
  </script>

  <div class="container my-5" id="jobs">
    <div class="buttons text-center">
      <input type="button" class="btn me-5" onclick="showalljobs()"
        style="border: 0.1em solid rgb(46, 171, 255); color: rgb(46, 171, 255);" value="All">
      <input type="button" class="btn" onclick="showannounced()"
        style="border: 0.1em solid rgb(46, 171, 255); color: rgb(46, 171, 255);" value="Announced">
    </div>

    <% if(message1.length > 0){ %>
      <div class="alert alert-danger mx-5 my-3">
          <%= message1 %>
      </div>
    <% } %>
    <% if(message2.length > 0){ %>
      <div class="alert alert-success mx-5 my-3">
          <%= message2 %>
      </div>
    <% } %>

    <div class="cards">
      <% d.forEach((item)=> { %>
        <div class="card text-center my-5">
          <div class="card-header fs-4">
            <%= item.jobname %>
          </div>
          <div class="card-body">
            <h5 class="card-title">Company name</h5>
            <p class="card-text">
              <%= item.description %>
            </p>
            <p class="card-text">Posted by</p>
            <p class="card-text"><%= item.start_sal %> To <%= item.end_sal %> Per Annum</p>
            <a href="#" class="btn me-3 disabled">Apply</a>
            <a href="#" class="btn">Check Details</a>
          </div>
          <div class="card-footer fs-6">
            2 days ago
          </div>
        </div>
        <% }) %>
    </div>
    <div class="text-center job_add">
      <a href="#" data-bs-toggle="modal" data-bs-target="#addjob">
        <ion-icon name="add-circle-outline" style="font-size: 3em; color: rgb(0, 64, 107);"></ion-icon>
      </a>
    </div>
  </div>


  <!-- Modal -->
  <div class="modal fade" id="addjob" tabindex="-1" aria-labelledby="addjob" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">Announce New Job</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form action="/addjobs" method="post" enctype="multipart/form-data">
            <div class="text-center">
              <input class="form-control" type="text" name="jobname" id="jobname" placeholder="Job Title">
            </div>
            <div class="mt-3 text-center">
              <input class="form-control" type="text" name="tilldate" id="tilldate" placeholder="Available Till Date"
                onfocus="(this.type = 'date')" onfocusout="(this.type='text')">
            </div>
            <div class="mt-3 text-center">
              <input class="form-control" type="text" name="fields" id="field" placeholder="Preferred Fields">
            </div>
            <div class="mt-3 text-center">
              <textarea class="form-control" name="description" id="description" cols="30" rows="5"
                placeholder="Enter a little about the job you are offering"></textarea>
            </div>
            <div class="mt-3 text-center">
              <input class="form-control" type="number" name="start_sal" id="start_sal" placeholder="Starting Salary per Annum" style="width: 45%;" >
              <input class="form-control" type="number" name="end_sal" id="end_sal" placeholder="Maximum Salary per Annum" style="width: 45%;">
            </div>
            <div class="mt-3 text-center">
              <input class="form-control" type="file" name="skills" id="skills" placeholder="Choose File">
            </div>
            <div class="mt-3 text-center">
              <button type="submit" class="btn btn-primary">Announce Job</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>


  <%- include('./footer.ejs') %>