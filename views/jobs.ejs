<%- include('./header.ejs') %>

  <script>
    deactiveLink();
    activeLink(1);
    activeLink(4);
  </script>

  <div class="container my-5" id="jobs">

    <% if(message1.length > 0){ %>
      <div class="alert alert-danger mx-5 my-3">
          <%= message1 %>
      </div>
    <% } %>
    <% if(message2.length > 0){ %>
      <div class="alert alert-success mx-5 my-3">
          <%= message2 %>
      </div>
    <% } %>

    <div class="cards">
      <% d.forEach((item)=> { %>
        <div class="card text-center my-5">
          <div class="card-header fs-4">
            <%= item.jobname %>
          </div>
          <div class="card-body">
            <h5 class="card-title">Company name : <%= item.bycompany %></h5>
            <p class="card-text">
              <%= item.description %>
            </p>
            <p class="card-text">Posted by : <%= item.postedby %></p>
            <p class="card-text"><%= item.start_sal %> To <%= item.end_sal %> Per Annum</p>
            <!-- <a href="/applyjob/<%= item._id %>" class="btn me-3">Apply</a> -->
            <a href="/job_details/<%= item._id %>" class="btn">Check Details</a>
          </div>
          <div class="card-footer fs-6">
            Available Till <%= item.tilldate.toDateString() %>
          </div>
        </div>
        <% }) %>
    </div>
  </div>

  <!-- Apply Jobs Modal -->
  <div class="modal fade" id="applyjob" tabindex="-1" aria-labelledby="applyjob" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">Announce New Job</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form action="/applyjob" method="post" enctype="multipart/form-data">
            <div class="text-center">
              <input class="form-control" type="text" name="company" id="company" value="" readonly>
            </div>
            <div class="text-center">
              <p class="fs-4">Do You Want To Apply For This Job?</p>
            </div>
            <div class="mt-3 text-center">
              <button type="submit" class="btn btn-primary">Apply</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script type="text/javascript" src="js/vanilla-tilt.js"></script>
    <script type="text/javascript">
        VanillaTilt.init(document.querySelectorAll(".card"), {
            max: 10,
            speed: 1000,
            glare: true,
            "max-glare": 0.2,
            scale: 1.05,
            axis: "y",
            gyroscope: true,
            perspective: 700,
        });
    </script>

  <%- include('./footer.ejs') %>