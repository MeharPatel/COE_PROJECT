<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link rel="stylesheet" href="css/login.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
    <title>My_Web</title>
    <link rel="stylesheet" href="css/reg.css">
</head>
<body class="container-fluid">
    <div class="container middle my-5" style="height: 37em;">
        <div class="image"></div>
        <form action="/recinsert" method="post" class="reg">
            <div class="logo text-center mt-4 mb-3" style="--s: 8%"><img src="images/logo11.jpg" alt="Logo"></div>
            <div class="inp_head" style="--i: 25%; --j: 23%">
                <p>Recruiter</p>
            </div>
            <% if(message.length > 0){ %>
                <div class="alert alert-danger mx-5">
                    <%= message %>
                </div>
            <% } %>
            <div class="ms-3 text-center">
                <input class="form-control" type="text" name="name" id="name" placeholder="Name" autocomplete="off">
            </div>
            <div class="mt-3 ms-3 text-center">
                <input class="form-control" type="email" name="email" id="email" placeholder="Email" autocomplete="off">
            </div>
            <div class="mt-3 ms-3 text-center">
                <input class="form-control" type="text" name="phone" pattern="[0-9]{10}" id="phone" placeholder="Mobile No." autocomplete="off">
            </div>
            <div class="mt-3 ms-3 text-center">
                <input class="form-control" type="text" name="company" id="company" placeholder="Company Name" autocomplete="off">
            </div>
            <div class="mt-3 ms-3 text-center">
                <input id="pass1" class="form-control" type="password" name="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" id="password" placeholder="Password">
            </div>
            <div class="mt-3 ms-3 text-center">
                <input id="pass2" class="form-control" type="password" name="c_password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" id="c_password" placeholder="Confirm Password">
            </div>
            <div class="inp_show mt-3 ms-3">
                <div class="show_box">
                    <input type="checkbox" name="show" id="show" onclick="showpassword()">
                </div>
                <div class="show_label ms-2">
                    <label for="show">Show Password</label>
                </div>
            </div>
            <div class="mt-3 text-center">
                <input class="btn me-3" type="submit" value="Register">
                <input class="btn" type="reset" value="Reset">
            </div>
            <div class="inp_text fs-6 mt-2 text-center">
                Already Have An Account?
                <a href="/" class="link">Click To Login</a>
            </div>
        </form>
    </div>
    <div class="wave" style="bottom: -6.5em;"></div>

    <script>
        function showpassword() {
            let showbox = document.getElementById("show");
            if (showbox.checked == true){
                document.getElementById("pass1").type = "text";
                document.getElementById("pass2").type = "text";
            } else {
                document.getElementById("pass1").type = "password";
                document.getElementById("pass2").type = "password";
            }
        }
    </script>
    <script type="text/javascript" src="js/vanilla-tilt.js"></script>
    <script type="text/javascript">
        VanillaTilt.init(document.querySelector(".middle"), {
            max: 10,
            speed: 1000,
            glare: true,
            "max-glare": 0.2,
            scale: 1.03,
        });
    </script>
</body>
</html>